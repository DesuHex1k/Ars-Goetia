<Page x:Class="MainMenu.Pages.EscMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MainMenu.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EscMenu" Background="Black">
    <StackPanel Margin="0,200,0,0">
        <Button x:Name="QuitToMenu" Content="Quit to menu" Height="75" Margin="0,0,0,50" FontSize="50" FontFamily="Gabriola" Click="QuitToMenu_Click"></Button>
        <Button x:Name="QuitFromGame" Content="Quit the game" Height="75" Margin="0,0,0,50" FontSize="50" FontFamily="Gabriola" Click="QuitFromGame_Click"></Button>
    </StackPanel>
</Page>
